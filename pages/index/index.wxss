.container{
  height:100%;
  box-sizing:border-box;
}
.team-block {
  width: 100%;
  height:100%;
  display:flex;
  flex-direction:column;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 15rpx;
}
.item-cntr{
  position:relative;
  border-top:2rpx solid #eee;
  height:120rpx;
  line-height:120rpx;
  overflow:hidden;
}
.item{
  background-color:#fff;
  width:100%;
  z-index:5;
  padding:0 10rpx;
  transition:left 0.2s ease-in-out;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  position:absolute;
  top:0;
}
.del{
  position:absolute;
  top:0;
  background-color:#e64340;
  width:150rpx;
  text-align:center;
  z-index:4;
  right:0;
  color:#fff;
}